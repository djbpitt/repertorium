                                    <ref type="bibl" target="bib:Briquet1907">Briquet 1907: 
                                        <num>3369</num>
                                        <date>1455–1470</date></ref>
                                </watermark>
                                <watermark>
                                    <motif xmlns="http://www.ilit.bas.bg/repertorium/ns/3.0" facs="https://briquet-online.at/2463">Scales
                                        in circle</motif>
                                    <term>two types, equal to</term>
                                    <ref type="bibl" target="bib:Briquet1907">Briquet 1907: 
                                        <num>2463</num>
