                <physDesc>
                    <objectDesc form="codex">
                        <supportDesc material="paper">
                            <support>
                                <material>A few types of paper, thick, white and smooth</material>
                                <watermark>
                                    <motif xmlns="http://www.ilit.bas.bg/repertorium/ns/3.0" facs="https://briquet-online.at/5159">Two
                                        crossed swords</motif>
