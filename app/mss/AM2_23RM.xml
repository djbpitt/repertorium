                                    <ref type="bibl" target="bib:Briquet1907">Briquet 1907: 
                                        <num>2463</num>
                                        <date>1468–1471</date></ref>
                                </watermark>
                                <watermark>
                                    <motif xmlns="http://www.ilit.bas.bg/repertorium/ns/3.0" facs="https://briquet-online.at/10713">Glove
