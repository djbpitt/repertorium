<?xml version="1.0" encoding="UTF-8"?>
<project default="all" name="repertorium">
    <xmlproperty file="expath-pkg.xml"/>
    <property name="project.version" value="${package(version)}"/>
    <property name="project.app" value="repertorium"/>
    <property name="build.dir" value="build"/>
<!-- Start it -->
    <target name="init" description="create build directory">
        <tstamp />
        <mkdir dir="${build.dir}" />
        </target>
    <!-- Dev build (includes everything unoptimized) -->
    <target name="dev" depends="init" description="compile all source files">
        <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}-dev.xar" excludes="**/${build.dir}/**, **/node_modules/**, **/private/**" />
    </target>
    <!-- Release build -->
    <target name="deploy" depends="init" description="compile release build">
        <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar" excludes="**/${build.dir}/**, .existdb.json, .yo-rc.json, **/node_modules/**, **/reports/**, README.md, **/.git*/**, **/private/** " />
    </target>
    <target name="all" depends="dev, deploy">
        <tstamp />
    </target>
</project>
