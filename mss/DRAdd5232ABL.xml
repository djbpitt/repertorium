                <physDesc>
                    <objectDesc form="roll">
                        <supportDesc material="paper">
                            <support>
                                <material>Paper. The original roll is now preserved divided up into
                                    its component pieces of paper and mounted on two pages of a
                                    large volume.</material>
                                <watermark>unclear</watermark>
                            </support>
                            <extent>
                                <measure unit="folia">5</measure> f. 149: <dimensions unit="mm"
                                    type="folia" extent="f.149">
                                    <height>350</height>
                                    <width>160</width>
                                </dimensions>
                                <dimensions unit="mm" type="folia" extent="f.147">
                                    <height>395</height>
                                    <width>160</width>
                                </dimensions>
                                <dimensions unit="mm" type="folia" extent="f.145">
                                    <height>400</height>
                                    <width>160</width>
                                </dimensions>
                                <dimensions unit="mm" type="folia" extent="f.144">
                                    <height>405</height>
                                    <width>160</width>
                                </dimensions>
                                <dimensions unit="mm" type="folia" extent="f.148">
                                    <height>340</height>
                                    <width>160</width>
                                </dimensions>
                                <dimensions type="written" unit="mm" extent="all">
